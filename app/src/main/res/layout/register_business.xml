<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FF85A1"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/RegisterBusinessTextView"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:text="Register Customer"
        android:textAlignment="center"
        android:textColor="#FAE0E4"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NameBusinessEditText"
        android:layout_width="262dp"
        android:background="@drawable/round_edittext"
        android:layout_height="45dp"
        android:hint="Name"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterBusinessTextView" />

    <EditText
        android:id="@+id/EmailBusinessEditText"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:hint="Email Id"
        android:background="@drawable/round_edittext"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameBusinessEditText" />

    <EditText
        android:id="@+id/PhoneNumberBusinessEditText"
        android:layout_width="262dp"
        android:hint="Phone Number"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:background="@drawable/round_edittext"
        android:textSize="25dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailBusinessEditText" />

    <EditText
        android:id="@+id/PasswordBusinessEditText"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_edittext"
        android:hint="Password"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNumberBusinessEditText" />

    <Button
        android:id="@+id/RegisterBusinessbutton"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#a53860"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordBusinessEditText" />

    <TextView
        android:id="@+id/LoginBusinessTextView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Already have an account?Login"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterBusinessbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Customer"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginBusinessTextView" />

    <RadioButton
        android:id="@+id/GroceryradioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Grocery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordBusinessEditText" />

    <RadioButton
        android:id="@+id/RestaurantsRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GroceryradioButton"
        app:layout_constraintTop_toBottomOf="@+id/PasswordBusinessEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>