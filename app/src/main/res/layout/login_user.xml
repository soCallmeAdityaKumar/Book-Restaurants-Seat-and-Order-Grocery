<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FF85A1"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="285dp"
        android:textColor="#FAE0E4"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Login Customer"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/LoginEmailEdit"
        android:layout_width="262dp"
        android:background="@drawable/round_edittext"
        android:layout_height="63dp"
        android:layout_marginTop="110dp"
        android:hint="Email"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/LoginPasswordEdit"
        android:layout_width="262dp"
        android:layout_height="63dp"
        android:layout_marginTop="63dp"
        android:hint="Password"
        android:background="@drawable/round_edittext"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginEmailEdit" />

    <Button
        android:id="@+id/LoginUserButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginPasswordEdit" />

    <TextView
        android:id="@+id/SignupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:textColor="#FAE0E4"
        android:text="Don't have an account? Signup"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginUserButton" />

    <TextView
        android:id="@+id/BusinessLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Business"
        android:textColor="#FAE0E4"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignupTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>